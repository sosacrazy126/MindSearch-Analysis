# MindSearch Configuration
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# OpenAI Configuration (Primary)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=60

# Silicon Flow Configuration (Alternative LLM Provider)
SILICON_API_KEY=
SILICON_API_BASE=https://api.siliconflow.cn/v1/chat/completions
SILICON_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
SILICON_MAX_TOKENS=4000
SILICON_TEMPERATURE=0.1
SILICON_TIMEOUT=60

# =============================================================================
# Search Engine Configuration
# =============================================================================

# DuckDuckGo Search (Default - No API key required)
WEB_SEARCH_API_KEY=

# Tencent Search (Alternative)
TENCENT_SEARCH_SECRET_ID=
TENCENT_SEARCH_SECRET_KEY=

# Search Configuration
SEARCH_TOPK=6
SEARCH_TIMEOUT=30

# =============================================================================
# API Server Configuration
# =============================================================================

# Server Settings
MINDSEARCH_HOST=0.0.0.0
MINDSEARCH_PORT=8002
MINDSEARCH_DEBUG=false
MINDSEARCH_DOCS_ENABLED=false

# CORS Configuration (comma-separated origins)
MINDSEARCH_CORS_ORIGINS=*

# =============================================================================
# Agent Configuration
# =============================================================================

# Language Settings
MINDSEARCH_LANGUAGE=en

# Agent Behavior
MINDSEARCH_MAX_TURNS=10
MINDSEARCH_USE_ASYNC=false
MINDSEARCH_SESSION_TIMEOUT=3600
MINDSEARCH_MEMORY_LIMIT=100

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MINDSEARCH_LOG_LEVEL=INFO

# Log Format
MINDSEARCH_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log File (optional - leave empty for console only)
MINDSEARCH_LOG_FILE=

# Log File Rotation
MINDSEARCH_LOG_MAX_SIZE=10485760
MINDSEARCH_LOG_BACKUP_COUNT=5

# =============================================================================
# Development & Testing
# =============================================================================

# Development Mode
MINDSEARCH_DEV_MODE=false

# Test Configuration
MINDSEARCH_TEST_MODE=false

# =============================================================================
# Example Configurations
# =============================================================================

# For Development (recommended for testing):
# MINDSEARCH_DEBUG=true
# MINDSEARCH_LOG_LEVEL=DEBUG
# MINDSEARCH_DOCS_ENABLED=true

# For Production:
# MINDSEARCH_DEBUG=false
# MINDSEARCH_LOG_LEVEL=INFO
# MINDSEARCH_DOCS_ENABLED=false
# MINDSEARCH_CORS_ORIGINS=https://yourdomain.com

# For High Performance:
# MINDSEARCH_USE_ASYNC=true
# MINDSEARCH_MAX_TURNS=15
# OPENAI_MODEL=gpt-4o-mini